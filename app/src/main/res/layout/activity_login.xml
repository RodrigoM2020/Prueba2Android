<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="vertical"
    android:background="@drawable/fondo"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/denuncia"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="50dp"
        />


    <EditText
        android:layout_marginTop="90dp"
        android:id="@+id/txt_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:textColor="#fafafa"
        android:textColorHint="#ffff"
        android:hint="email" />

    <EditText
        android:id="@+id/txt_login_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:textColor="#ffff"
        android:textColorHint="#ffff"
        android:layout_below="@id/txt_login_email"
        android:hint="clave" />

    <Button
        android:id="@+id/txt_boton_acceder"
        android:background="#802962ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_login_pass"
        android:textColor="@color/cardview_light_background"
        android:text="Acceder"
        android:onClick="acceder"
        />
    <Button
        android:id="@+id/txt_boton_registrar"
        android:background="#802962ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/cardview_light_background"
        android:layout_below="@id/txt_boton_acceder"
        android:text="Registrar"
        android:onClick="cargarRegistro"
        />



</LinearLayout>